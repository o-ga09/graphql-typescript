{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "lib": ["es2015"],
    "target": "es2020",
    "module": "ES2022",
    "strict": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
